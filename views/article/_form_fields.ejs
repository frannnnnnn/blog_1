<div class="form-group">
    <label for="title">Title</label>
    <input type="text" required id="title" name="title" class="form-control" value="<%=article.title %>">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" class="form-control"><%=article.description%></textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea id="markdown" name="markdown" class="form-control"><%=article.markdown%></textarea>
</div>

<div class="mt-4">
    <a href="/" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>